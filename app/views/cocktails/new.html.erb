
<div class="container">
  <div class="row">
    <div class="col-xs-6 col-offset-3">

      <h1>Create a new cocktail</h1>

      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: "btn btn-success" %>
      <% end %>
      <br>
      <%= link_to "Back to the cocktails", cocktails_path, class: "btn btn-info" %>


    </div>
  </div>
</div>

