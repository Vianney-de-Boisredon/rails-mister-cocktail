<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://source.unsplash.com/random/400x300');"></div>
      <div class="content">
        <% @cocktail.doses.each do |dose| %>
          <ul class="list-unstyled">
            <li>
              <i class="fas fa-cocktail"></i>
              <h2> <%= @cocktail.name %> </h2>
              <%= dose.ingredient.name %> (<%= dose.description%>)
            </li>
          </ul>
        <% end %>
        <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class: "btn" %>
        <%= link_to "Back to the cocktails", cocktails_path, class: "btn" %>
      </div>
    </div>
  </div>
</div>
