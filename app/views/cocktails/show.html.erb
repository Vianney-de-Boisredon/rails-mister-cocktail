
<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">

      <div class="card"
        style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
               url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>')">
        <div class="card-category">Popular</div>
        <div class="card-description">
          <h2><i class="fas fa-cocktail"></i><%= @cocktail.name %> </h2>
          <% @cocktail.doses.each do |dose| %>
            <ul class="list-unstyled">
              <li>
                <%= dose.ingredient.name %> (<%= dose.description %>)
              </li>
            </ul>
            <% end %>
        </div>
        <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class: "new-dose-link" %>
        <%= link_to "Back to the cocktails", cocktails_path, class: "back-link" %>
      </div>


    </div>


  </div>



</div>


